{
  // editor
  "editor.parameterHints.enabled": false,
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.addMissingImports": "explicit",
    "source.organizeImports": "never"
  },
  "editor.largeFileOptimizations": false,
  "editor.fontSize": 13,
  "editor.fontFamily": "FiraCode Nerd Font",
  "editor.fontLigatures": true,
  "editor.lineHeight": 1.8,
  "editor.renderLineHighlight": "gutter",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.semanticHighlighting.enabled": false,
  "editor.minimap.enabled": false,
  // "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.rulers": [
    80,
    120
  ],
  "editor.formatOnType": true,
  // explorer
  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    // "*.ts": "${capture}.js",
    // "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    // "*.jsx": "${capture}.js",
    // "*.tsx": "${capture}.ts",
    "package.json": ".eslint*, prettier*, tsconfig*, package-lock*, yarn.lock*, pnpm-lock*, bun-lock*, vite*",
    "tailwind.config*": "tailwind.config*, postcss.config*",
    ".env.local": ".env*",
    ".env": ".env*"
  },
  // files
  "files.associations": {
    ".sequelizerc": "javascript",
    ".stylelintrc": "json",
    "*.tsx": "typescriptreact",
    ".env.*": "dotenv",
    ".prettierrc": "json",
    "*.cs": "csharp"
  },
  "files.autoSave": "onFocusChange",
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  // security
  "security.workspace.trust.untrustedFiles": "open",
  // git
  "git.autofetch": true,
  // settings sync
  "settingsSync.ignoredExtensions": [
    "zaczero.bootstrap-v4-snippets"
  ],
  // symbols
  "symbols.hidesExplorerArrows": false,
  // tabnine
  "tabnine.experimentalAutoImports": true,
  // google translate
  "vscodeGoogleTranslate.preferredLanguage": "English",
  // mssql
  "database-client.autoSync": true,
  "mssql.enableRichExperiences": true,
  // window
  "window.titleBarStyle": "custom",
  "window.commandCenter": false,
  "window.menuBarVisibility": "compact",
  // C#
  "[csharp]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },
  "csharp.format.enable": true,
  "dotnetAcquisitionExtension.sharedExistingDotnetPath": "C:\\Program Files\\dotnet\\dotnet.exe",
  "dotnet.formatting.organizeImportsOnFormat": true,
  // vscode-icons
  "vsicons.presets.foldersAllDefaultIcon": true,
  // workbench
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.labelFormat": "short",
  "workbench.activityBar.location": "top",
  "workbench.statusBar.visible": false,
  "workbench.iconTheme": "symbols",
  "workbench.tree.renderIndentGuides": "none",
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "Omni",
  "workbench.editor.empty.hint": "hidden",
  // terminal
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  "terminal.integrated.defaultProfile.linux": "zsh (2)",
  "terminal.integrated.letterSpacing": 1,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "bash",
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh"
    },
    "fish": {
      "path": "fish"
    },
    "tmux": {
      "path": "tmux",
      "icon": "terminal-tmux"
    },
    "pwsh": {
      "path": "pwsh",
      "icon": "terminal-powershell"
    },
    "zsh (2)": {
      "path": "/usr/bin/zsh"
    }
  },
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Ubuntu (WSL)": {
      "path": "C:\\WINDOWS\\System32\\wsl.exe",
      "args": [
        "-d",
        "Ubuntu"
      ]
    }
  }
}
